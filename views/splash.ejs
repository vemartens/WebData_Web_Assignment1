<html>
    <head>
        <title>Mastermind</title>
        <link rel="stylesheet" href="stylesheets/splash.css">
    </head>

    <body>
        <main>
            <section id="top">
                <h1 class="mastermind">Mastermind</h1>
                <!-- <h5 class="neon" data-text="U">MA<span class="flicker-slow">ST</span>E<span class="flicker-fast">R</span>MIND</h5> -->
                <h2>Code-breaking game for two players</h2>
            </section>

            <!-- eventueel naam invullen -->

            <section id="play">
                <form action="/play" method="get">
                    <button class="playButton" type="submit">Play</button>
                </form>
            </section>

            <!-- wordt missch aangepast naar onmouseover/onmouseout -->
            <section id="instruction">
                <button onclick="instructionButton()">Instructions</button>
            </section>

            <section>
                <h3><%= gamesInitialized %> 
                    <%if (gamesInitialized != 1) { %>
                        games
                    <% } else { %>
                        game
                    <% } %>
                    started, 
                    <%= gamesCompleted %> 
                    completed,
                    <%= brokenCodes %>
                    <%if (brokenCodes != 1) { %>
                        codes are
                    <% } else { %>
                        code is
                    <% } %>
                    broken
                </h3>
            </section>

            <section>
                <h3>
                    There are
                    <%= gameStarted %>
                    people who played this game.
                </h3>
            </section>

            <picture id="bolpic">
                <img src="bolletjeOranje.png" alt="bolletjeOranje" style="width:100px;">
            </picture>

            <picture id="bolpic2">
                <img src="bolletjeBlauw.png" alt="bolletjeBlauw" style="width:100px;">
            </picture>
              
            <script src="javascripts/instruction.js"></script>
        </main>
    </body>
</html>